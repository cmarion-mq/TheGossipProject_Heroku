<div class="container pt-5">
  <% flash.each do |type, msg| %>
    <div class="alert alert-warning">
      <%= msg %>
    </div>
  <% end %>

  <%= form_tag url_for(action: 'create'), method: "post" do %>

    <%= label_tag 'Title' %>
    <%= text_field_tag 'title', @gossip.title, required: true %>
    <br /> <br />

    <%= label_tag 'Content' %>
    <%= text_area_tag 'content', @gossip.content, required: true %>
    <br /> <br />

    <%= submit_tag "Create Gossip" %>

  <% end %>
</div>