<div class="container pt-5">
<h1>Edit the gossip </h1>
<%= form_for @gossip do |f| %>
  <div class="form-group">
    <label>Titre du gossip</label>
    <%= f.text_field :title, class: 'form-control' %>
  </div>

  <div class="form-group width: 500px">
    <label>Contenu du gossip</label>
    <%= f.text_area :content, class: 'form-control' %>
  </div>

  <div class="form-group">
    <button type="submit"> Modifier le gossip </button>
  </div>
<% end %>
</div>